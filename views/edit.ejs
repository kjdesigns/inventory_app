<% include ./partials/header %>
<div class="container">

<div class="text-center">
    <h1>EDIT <%=inventory.item.toUpperCase()%></h1>
    <img class="img-responsive thumbnail" src="<%=inventory.image%>">
</div>




    <div class="container center_div">
        <form action="/inventory/<%=inventory._id%>?_method=PUT" method="POST" class="form-horizontal kform">
            <div class="form-group">
                <label class="control-label col-sm-2">ITEM</label>
                <div class="col-sm-10">
                    <input  class="form-control" type ="text" name="inventory[item]" value="<%=inventory.item%>">
                </div>
                
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Image</label>
                <div class="col-sm-10">
                    <input  class="form-control" type ="text" name="inventory[image]" value="<%=inventory.image%>">
                </div>
                    
                
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">SIZE:</label>
                <div class="col-sm-10">
                    <input  class="form-control" type ="text" name="inventory[size]" value="<%=inventory.size%>">
                </div>
                    
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">AMOUNT REMAINING</label>
                <div class="col-sm-10">
                    <input  class="form-control" type ="number" name="inventory[amtRemaining]" value="<%=inventory.amtRemaining%>">
                </div>
        
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Par Level</label>
                <div class="col-sm-10">
                    <input  class="form-control" type ="number" name="inventory[parLevel]" value="<%=inventory.parLevel%>">
                </div>
        
            </div>
            <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
            </div>
        </form>
        
    </div>
    

</div>


<% include ./partials/footer %>